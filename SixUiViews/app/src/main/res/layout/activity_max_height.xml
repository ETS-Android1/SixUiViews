<?xml version="1.0" encoding="utf-8"?>
<ca.six.views.views.maxheig.MaxHeightRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:max_height="300dp">

    <TextView android:id="@+id/tv001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Title"
        android:textColor="#000"
        android:textSize="100dp" />

    <ScrollView android:id="@+id/sv002"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/tv001"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Line001"
                android:textColor="#f00"
                android:textSize="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Line002"
                android:textColor="#0f0"
                android:textSize="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Line003"
                android:textColor="#00f"
                android:textSize="80dp" />
        </LinearLayout>
    </ScrollView>

    <ImageView android:id="@+id/iv003"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/sv002"
        android:src="@drawable/wlake"/>

</ca.six.views.views.maxheig.MaxHeightRelativeLayout>
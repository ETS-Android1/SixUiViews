<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TabsView">
        <attr name="tab_text" format="string" />
        <attr name="tab_ui_style" format="integer" />
    </declare-styleable>

    <declare-styleable name="MaxHeightRelativeLayout">
        <attr name="max_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleLoadingView">
        <attr name="cl_circleRadius" format="dimension"/>
        <attr name="cl_fillAnimationDuration" format="integer"/>
        <attr name="cl_circleStrokeSize" format="dimension"/>
        <attr name="cl_src" format="integer"/>
    </declare-styleable>

    <declare-styleable name="timeline_style" >
        <attr name="marker" format="color|reference"/>
        <attr name="line" format="color|reference"/>
        <attr name="marker_size" format="dimension"/>
        <attr name="line_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SwipeDeck">
        <attr name="max_visible" format="integer"/>
        <attr name="rotation_degrees" format="float"/>
        <attr name="card_spacing" format="dimension"/>
        <attr name="render_above" format="boolean"/>
        <attr name="render_below" format="boolean"/>
        <attr name="opacity_end" format="float"/>
        <attr name="card_gravity" format="enum">
            <enum name="top" value="0"/>
            <enum name="center" value="1"/>
            <enum name="bottom" value="2"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="PINInputView">
        <attr name="pinTextColor" format="reference|color"/>
        <attr name="pinBackgroundColor" format="reference|color"/>
    </declare-styleable>


</resources>